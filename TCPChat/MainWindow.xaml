<Window x:Class="TCPChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCPChat"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="139*"/>
            <RowDefinition Height="21*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="395*"/>
            <ColumnDefinition Width="122*"/>
        </Grid.ColumnDefinitions>
        <TextBox   Margin="10,10,10,10" TextWrapping="Wrap" Text="{Binding Path=mainText}" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="303*">
                </ColumnDefinition>
                <ColumnDefinition Width="92*">
                </ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox   Margin="10"   Text="{Binding message}"/>
            <Button Grid.Column="1" Content="Send" Margin="10"  Click="Button_Click"/>
        </Grid>
        <Button Content="Conect to server" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="102" Height="22" Click="Button_Click_1"/>
        <ListBox Grid.Column="1" Margin="10"/>

    </Grid>
</Window>
