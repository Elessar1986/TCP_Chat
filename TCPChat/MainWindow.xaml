<Window x:Class="TCPChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCPChat"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="11*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="395*"/>
            <ColumnDefinition Width="122*"/>
        </Grid.ColumnDefinitions>
        <TextBox   Margin="10" Height="auto" TextWrapping="Wrap" Text="{Binding Path=mainText}" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="303*">
                </ColumnDefinition>
                <ColumnDefinition Width="92*">
                </ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox   Margin="10"   Text="{Binding message}"/>
            <Button Grid.Column="1" Content="Send" Margin="10" MaxHeight="25"  Click="Button_Click"/>
        </Grid>
        <Button Content="Conect to server" Grid.Column="1" MaxHeight="25" Margin="5,5,5,3" Grid.Row="1" Click="Button_Click_1" Height="Auto"/>
        <ListBox Grid.Column="1" Margin="10"/>

    </Grid>
</Window>
