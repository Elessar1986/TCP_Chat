            <RowDefinition Height="9*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Name="Chat" ></TextBox>
        <TextBox Name="Logins" Grid.Column="1"></TextBox>
        <Button Grid.Column="1" Grid.Row="1" Content="Stert Server" Click="Button_ClickAsync"></Button>
    </Grid>
</Window>
